{
  "compilerOptions": {
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es5",
      "es2015.promise",
      "dom",
      "es2015"
    ],
    "allowSyntheticDefaultImports": true,
    "declaration": false
  },
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
